{% extends 'base.html.twig' %}

{% block title %}Hello CoachAgendaController!
{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <h2 class="font-weight-regular">Are you sure you want to remove {{ client.firstname }} {{ client.lastname }} as a client?</h2>

    <p class="mt-3 mb-2">This process is not reversible and you will need to invite your client again.</p>

    <div class="form-group mt-3">
        {{ form_widget(form.confirm) }}
        {{ form_label(form.confirm, null, {'label_attr': {'class': 'form-check-label'}}) }}
    </div>

    <div class="form-group">
        {{ form_row(form.delete) }}
        <a href="{{ path('app_coach') }}" class="btn btn-info btn-lg btn-block w-100 mt-4 text-white">
            Go back
        </a>
    </div>
    {{ form_end(form) }}

{% endblock %}